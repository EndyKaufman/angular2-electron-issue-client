{
    "name": "angular2-electron-issue-client",
    "version": "0.0.1",
    "description": "Simple client for issue trackers (redmine, jira, asana, bitbucket, github)",
    "scripts": {
        "start": "npm run clear && webpack-dev-server --config config/webpack.dev.js --port 3000 --inline --progress",
        "start:electron": "npm start --prefix ./electron/dist",
        "build": "npm run clear && rimraf dist && webpack --config config/webpack.prod.js --progress --profile --bail",
        "build:gh-pages": "npm run clear && rimraf gh-pages && webpack --config config/webpack.gh-pages.js --progress --profile --bail",
        "build:electron": "npm run clear && rimraf electron/dist && cp -fR electron/src electron/dist && webpack --config config/webpack.electron.js --progress --profile --bail",
        "build:all": "npm run build && npm run build:gh-pages && npm run build:electron",        
        "lite": "lite-server -c config/bs-server.json",
        "clear": "node config/clear.src.js",
        "postinstall": "typings install && npm install --prefix ./electron/src"
    },
    "license": "MIT",
    "dependencies": {
        "@angular/common": "5.0.1",
        "@angular/compiler": "5.0.1",
        "@angular/core": "5.0.1",
        "@angular/http": "5.0.1",
        "@angular/platform-browser": "5.0.1",
        "@angular/platform-browser-dynamic": "5.0.1",
        "@angular/router": "5.0.1",
        "@angular/router-deprecated": "2.0.0-rc.2",
        "@angular/upgrade": "5.0.1",
        "angular2-in-memory-web-api": "0.0.21",
        "bootstrap": "^3.3.6",
        "core-js": "^2.4.0",
        "jquery": "^3.2.1",
        "reflect-metadata": "^0.1.3",
        "rxjs": "5.5.2",
        "semantic-ui": "^2.1.8",
        "systemjs": "0.20.19",
        "zone.js": "^0.8.18"
    },
    "devDependencies": {
        "webpack": "^3.8.1",
        "webpack-dev-server": "^2.9.4",
        "webpack-merge": "^4.1.1",
        "concurrently": "^3.5.0",
        "css-loader": "^0.28.7",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.5",
        "find-remove": "^1.0.1",
        "html-loader": "^0.5.1",
        "html-webpack-plugin": "^2.15.0",
        "lite-server": "^2.2.0",
        "null-loader": "^0.1.1",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.5.2",
        "semantic-ui": "^2.1.8",
        "style-loader": "^0.19.0",
        "ts-loader": "^3.1.1",
        "typescript": "^2.6.1",
        "typings": "^2.1.1"
    }
}
